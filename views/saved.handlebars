{{!-- pannels for each article --}}
<div class="container">
    {{#each articles}}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{this.title}}</h3>
            <div id="savedArticleButtons">
                <br>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#commentsModal" data="{{this._id}}"
                    aria-hidden="true">ARTICLE COMMENTS</button>

                <button type="submit" class="btn btn-danger deleteFromSaved" data="{{this._id}}">DELETE FROM SAVED</button>

                <!-- Modal -->
                <div id="commentsModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close closeCommentModal" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Article id: {{this.id}}</h4>
                            </div>
                            <div class="modal-body">

                                <input type="hidden" value={{this.id}} class="articleId" />
                                <textarea type="text" class="form-control commentBody" placeholder="Add comment here"></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default commentSubmit" data-dismiss="modal">Submit</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <a href="{{this.link}}" target="_blank" style="color:black;">{{this.link}}</a>
        </div>
    </div>
    {{/each}}
</div>
